<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:text="Title: "
            android:textColor="@android:color/black"
            style="@style/DialogTextView"
            android:id="@+id/textMovie"
            android:layout_alignBottom="@id/editMovieTitle"/>

        <EditText
            android:id="@+id/editMovieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Movie Title"
            android:layout_toRightOf="@id/textMovie"/>

        <TextView
            android:id="@+id/textDurration"
            style="@style/DialogTextView"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textMovie"
            android:text="Duration: "
            android:textColor="@android:color/black" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textDurration"
            android:layout_below="@id/editMovieTitle"
            android:hint="Runtime (mins)"
            android:id="@+id/editDurration"
            android:inputType="numberSigned"/>

        <TextView
            android:id="@+id/textBudget"
            style="@style/DialogTextView"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textDurration"
            android:text="Budget: " />
        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editBudget"
            android:layout_toRightOf="@id/textBudget"
            android:layout_below="@id/editDurration"
            android:hint="15000000"
            android:inputType="numberSigned"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>