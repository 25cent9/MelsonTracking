<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie Title"
                style="@style/DialogTextViewTitle"
                android:id="@+id/movieExpandedTitle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                style="@style/DialogTextView"
                android:id="@+id/movieExpandedYear"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DialogTextView"
                android:text="Budget"
                android:id="@+id/movieExpandedBudget"/>
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Runtime"
                style="@style/DialogTextView"
                      android:id="@+id/movieExpandedRuntime"
                />
        </LinearLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Close"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/movieExpandedCloseButton"
            />
    </RelativeLayout>>
    </LinearLayout>>
</android.support.constraint.ConstraintLayout>