<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:theme="@style/CardStyle"
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/white"
            android:clickable="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:textSize="36sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Directed:"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:paddingLeft="16dp"
                    android:id="@+id/textPersonCardDirects"
                    />
                <TextView
                    android:id="@+id/textPersonCardStars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stars in:"
                    android:paddingLeft="16dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/textPersonCardWrites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wrote:"
                    android:paddingLeft="16dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/textPersonAwardsNominated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Awards Nominated"
                    android:paddingLeft="16dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/textPersonAwardsWon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Awards Won"
                    android:paddingLeft="16dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    />


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>